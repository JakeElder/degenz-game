{
  "name": "discord",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf dist && concurrently --raw \"yarn watch\" \"wait-on dist/main.js && yarn start:dev\"",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/main",
    "start:dev": "nodemon --exec \"node -r source-map-support/register dist/main\"",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "watch": [
      "dist",
      "../../packages/types/dist",
      "../../packages/manifest/dist",
      "../../packages/lib/dist",
      "../../packages/app-config/dist",
      "../../packages/db/dist"
    ]
  },
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@types/source-map-support": "^0.5.4",
    "app-config": "*",
    "bson-objectid": "^2.0.2",
    "change-case": "^4.1.2",
    "db": "*",
    "delay": "^5.0.0",
    "discord.js": "^13.6.0",
    "lib": "*",
    "lodash": "^4.17.21",
    "manifest": "*",
    "mongodb": "^4.3.1",
    "node-cleanup": "^2.1.2",
    "node-emoji": "^1.11.0",
    "pretty-error": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "table": "^6.8.0",
    "turndown": "^7.1.1",
    "typeorm": "^0.2.41",
    "types": "*",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.12",
    "@types/node-cleanup": "^2.1.2",
    "@types/node-emoji": "^1.8.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/turndown": "^5.0.1",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "config": "*",
    "eslint": "7.32.0",
    "nodemon": "^2.0.15",
    "source-map-support": "^0.5.21",
    "tsconfig": "*",
    "typescript": "^4.5.3",
    "wait-on": "^6.0.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.14.0"
  }
}

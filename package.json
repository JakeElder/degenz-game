{
  "name": "degenz",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "find packages apps -name dist -depth 2 -exec rm -rf '{}' +",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.14.0"
  },
  "packageManager": "yarn@1.22.17",
  "dependencies": {
    "patch-package": "^6.4.7",
    "pm2": "^5.2.0"
  }
}
